<mvc:View controllerName="in.sijas.restwithui5.controller.Initial"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Table id="userTable" items="{/users}">
        <headerToolbar>
            <Toolbar>
                <Title text="Users"></Title>
                <ToolbarSpacer />
                <Button icon="sap-icon://add" press="CreateNew"></Button>
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="Name"/>
            </Column>
            <Column>
                <Text text="Email"/>
            </Column>
            <Column>
                <Text text="Gender"/>
            </Column>
            <Column>
                <Text text="Status"/>
            </Column>
        </columns>
        <ColumnListItem type="Navigation" press="navigateToDetails" highlight="{= ${isSaved}?'Success':'Error'}">
            <cells>
                <Text text="{name}"/>
                <Text text="{email}"/>
                <Text text="{gender}"/>
                <Text text="{status}"/>
            </cells>
        </ColumnListItem>
    </Table>
</mvc:View>
